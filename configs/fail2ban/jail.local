[DEFAULT]
bantime = 86400
findtime = 600
maxretry = 3
backend = auto

# 全局使用自定义 action
banaction = nft-inet-blacklist

[sshd]
enabled = true
port = ssh
logpath = /var/log/auth.log
maxretry = 3

[haproxy-docker]
enabled  = true
filter   = haproxy-docker
logpath  = /var/lib/docker/containers/*/*-json.log
maxretry = 3
findtime = 300
bantime  = 86400
action   = nft-inet-blacklist